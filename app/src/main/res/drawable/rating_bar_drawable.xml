<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/star_filled" /> <!-- khi sao được chọn -->
    <item android:state_focused="true"
        android:drawable="@drawable/star_filled" /> <!-- khi sao được focus -->
    <item android:state_selected="true"
        android:drawable="@drawable/star_filled" /> <!-- khi sao được chọn -->
    <item android:drawable="@drawable/star_empty" /> <!-- mặc định, sao không được chọn -->
</selector>