<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.views.home.fragment.Profile.Settings">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SETTING"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/bell"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_notifications_settings"
        android:layout_below="@+id/back" />

    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Thông Báo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/bell"
        android:layout_below="@+id/back" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:text="Thông Báo"
    android:textSize="20sp"
    android:layout_below="@+id/tv_notification" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notification"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/tv_notification"
        android:textColorHighlight="#FF5722"
        android:textColorLink="#FF5722"
        android:thumb="@drawable/thumb"
        android:track="@drawable/track" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Cập Nhật"
        android:textSize="20sp"
        android:layout_below="@+id/switch_notification" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/switch_notification"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:thumb="@drawable/thumb"
        android:track="@drawable/track"
        android:layout_toRightOf="@+id/tv_notification" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/switch_update"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_settings_setting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khác"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/switch_update"
        android:layout_toRightOf="@+id/imageView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chế Độ Tối"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView2"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:thumb="@drawable/thumb"
        android:track="@drawable/track"
        android:layout_toRightOf="@+id/tv_notification" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngôn Ngữ"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/switch_dark_mode"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_dark_mode"
        android:layout_marginLeft="134dp"
        android:layout_toRightOf="@+id/tv_notification"
        android:text="Tiếng Việt"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vị Trí"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_language"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_language"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_notification"
        android:text="Hà Nội"
        android:textSize="20sp" />





</RelativeLayout>