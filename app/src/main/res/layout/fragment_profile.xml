<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.home.fragment.ProfileFragment">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_back"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="PROFILE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />


        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/avt_profile"
            android:clipToOutline="true"
            android:src="@drawable/placeholder"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/tvProfile"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="121dp"
            android:layout_marginTop="55dp"
            android:text="Ngông Nguyễn Thành"
            android:textSize="23sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/tvName"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="121dp"
            android:gravity="top"
            android:text="0123456789"
            android:textColor="#B1B1B1"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ListView
            android:id="@+id/lvProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgAvatar"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:padding="10dp"
            android:scrollbars="none"
            android:visibility="visible"
            tools:listitem="@layout/item_profile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lvProfile"
            android:layout_marginTop="50dp"
            android:layout_marginStart="27dp"
            android:paddingVertical="15dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_logout_profile"
                />

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Đăng xuất"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>



    </RelativeLayout>
</FrameLayout>
